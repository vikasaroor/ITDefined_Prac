boolean myTest = true

pipeline{

agent any

options{
        buildDiscarder logRotator(numToKeepStr: '5')
        timeout (10)
} 

stages{

    stage('Initial'){
      steps{
        echo 'Hello All' 
  
      }
    }

    stage('SecondStage'){

      when {
        expression myTest == true
      }
      
      steps{
        echo 'Hello Second Stage' 
        } 
        post{
        'SUCCESS' {
        echo "WithIn stage"
          }
}
      }
    

    stage('ThridStgae'){
      steps{
        echo 'Hello All' 
        echo 'Hello Third Stage' 
        } 
      }
      
  }

post{
  always{
    echo "hello"
  }
}


}

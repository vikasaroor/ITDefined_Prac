pipeline{

agent any

options{
        buildDiscarder logRotator(numToKeepStr: '5')
        timeout (10)
}

triggers{
    pollSCM('*/2 * * * *')
    githubPush()
    
}

parameters {     
    choice name:'Branch', description:'Select required Branch',choices:['main','master','Preprod','testing']
    string name: 'environment' , description: 'add req String, build on  BUILD value'
    booleanParam: name: 'BUILD', defaultValue: false
}

stages {

stage('CheckoutCode'){
    steps{
        git branch: "${params.Branch}",  url: 'https://github.com/vikasaroor/delete.git'
    
}
}

stage('Stage2'){

    // when {
    //    triggeredBy 'README.md'
       
    // }

    steps{ 
        sh '''echo Hello
              git remote -v
               
              ls -l
              git branch -a '''
}
}


stage('Stage3'){

    steps{ 
        echo 'Testing continitity'
    
}
}

}
}



